<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Foot-IL</title>
  <link rel="stylesheet" href="/css/styles.css" />
  <script src="https://code.jquery.com/jquery-3.7.0.min.js
    "></script>
</head>

<body>
  <button id="signup">Sign Up</button>
  <button id="login">Login</button>
  <div id="cur-user" style="display: none"></div>
  <div id="err-log" style="display: none"></div>


  <!--Login Form-->
  <div id="login-container" style="display: none">
    <h1>Login Form</h1>
    <form id="loginForm">
      <label for="email">Email:</label>
      <input type="email" id="email" name="email" required /><br />

      <label for="password">Password:</label>
      <input type="password" id="password" name="password" required /><br />

      <button type="button" id="login-btn" />Login</button>
    </form>
  </div>

  <!-- Signup Form-->
  <div id="signup-container" style="display: none">
    <h1>Signup Form</h1>
    <form id="signupForm">
      <!-- Required Fields -->
      <label for="name">Name:</label>
      <input type="text" id="name" name="name" required /><br />

      <label for="new_email">Email:</label>
      <input type="new_email" id="new_email" name="new_email" required /><br />

      <label for="new_password">Password:</label>
      <input type="password" id="new_password" name="new_password" required /><br />

      <label for="confirmPassword">Confirm Password:</label>
      <input type="password" id="confirmPassword" name="confirmPassword" required /><br />

      <!-- Optional Fields -->
      <label for="image">Image:</label>
      <input type="file" id="image" name="image" accept="image/*" /><br />

      <label for="city">City:</label>
      <input type="text" id="city" name="city" /><br />

      <label for="street">Street:</label>
      <input type="text" id="street" name="street" /><br />

      <label for="houseNumber">House Number:</label>
      <input type="text" id="houseNumber" name="houseNumber" /><br />

      <label for="floor">Floor:</label>
      <input type="text" id="floor" name="floor" /><br />

      <label for="apartment">Apartment:</label>
      <input type="text" id="apartment" name="apartment" /><br />

      <label for="balance">Balance:</label>
      <input type="text" id="balance" name="balance" /><br />

      <input type="submit" value="Signup" id="signup-btn" />
    </form>
  </div>



  <script type="module" src="/js/index.js"></script>
</body>

</html>